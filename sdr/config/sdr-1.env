SDR_DEVICE_INDEX=1
DESCRIPTION="VHF Channel 67"

ENABLED=true

ICECAST_HOST=vhf.shiftcims.com       # Icecast server hostname or IP
ICECAST_PORT=8888                    # Icecast server port
ICECAST_SOURCE_PASSWORD=hackme       # Icecast source password (for publishing)
ICECAST_MOUNT_POINT=ch67             # Mount point name (runner adds .opus or .mp3 based on CODEC)

VHF_FREQUENCY=156375000              # Frequency in Hz
RTL_SAMPLE_RATE=48000                # SDR sample rate in Hz for rtl_fm
RTL_OUTPUT_RATE=48000                # Audio output rate in Hz sent to ffmpeg
RTL_GAIN=0                           # SDR gain in dB (or "0" for auto)
RTL_PPM_ERROR=-28                    # PPM frequency correction; measure with rtl_test -p
RTL_SQUELCH=0                        # Squelch level (0 disables, higher = stricter mute)

AUDIO_HIGHPASS=300                   # High-pass filter cutoff (Hz) to remove low-frequency noise
AUDIO_LOWPASS=3000                   # Low-pass filter cutoff (Hz) to remove high-frequency noise
AUDIO_VOLUME=5.0                     # Volume multiplier applied in ffmpeg

CODEC=opus                           # Output codec: "opus" for low-latency Ogg/Opus, or "mp3" for MP3
BITRATE=64k                          # Audio bitrate for chosen codec


