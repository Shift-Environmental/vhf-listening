SDR_DEVICE_INDEX=1
DESCRIPTION="VHF Test Channel"

ENABLED=true

ICECAST_HOST=vhf.shiftcims.com       # Icecast server hostname or IP
ICECAST_PORT=8888                    # Icecast server port
ICECAST_SOURCE_PASSWORD=shiny-brick  # Icecast source password (for publishing)
ICECAST_MOUNT_POINT=test              # Mount point name (runner adds .opus or .mp3 based on CODEC)

VHF_FREQUENCY=156475000              # Frequency in Hz
RTL_SAMPLE_RATE=1024000              # SDR sample rate in Hz for rtl_fm
RTL_AUDIO_RATE=48000                 # Audio sample rate in Hz sent to ffmpeg

AUDIO_HIGHPASS=300                   # High-pass filter cutoff (Hz) to remove low-frequency noise
AUDIO_LOWPASS=3000                   # Low-pass filter cutoff (Hz) to remove high-frequency noise
AUDIO_VOLUME=5.0                     # Volume multiplier applied in ffmpeg

CODEC=opus                           # Output codec: "opus" for low-latency Ogg/Opus, or "mp3" for MP3
BITRATE=64k                          # Audio bitrate for chosen codec
